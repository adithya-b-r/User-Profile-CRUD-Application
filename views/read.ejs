<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Read User</title>
</head>

<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white overflow-scroll">
    <div class="nav mb-5">
      <a class="text-blue-500" href="/">Create User</a>
    </div>
    <h1 class="text-3xl tracking-tighter mb-5">All Users</h1>

    <div class="users w-full  flex justify-flex-start m-5 gap-3 flex-wrap">
      <% users.forEach(function(user){ %>
        <div class="user w-60 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-700 mb-3">
            <img class="w-full h-full object-fill object-center" src="<%= user.image %>">
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-5 justify-between">
            <a class="text-green-400 font-semibold" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-400 font-semibold" href="/delete/<%= user._id %>">Delete User</a>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>